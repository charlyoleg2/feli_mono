{
	"name": "dedale_mono",
	"version": "0.1.1",
	"description": "The mono-repo for an experimental hono-svelte-app and hono-astro-app",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/dedale_mono.git"
	},
	"homepage": "https://charlyoleg2.github.io/dedale_mono/",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"crud",
		"micro-services",
		"backend",
		"rpc",
		"svelte",
		"hono",
		"zod"
	],
	"type": "module",
	"workspaces": [
		"pkg/*"
	],
	"scripts": {
		"back-config:ci": "npm -w back-config run ci",
		"back-config:clean": "npm -w back-config run clean",
		"back-config:version": "npm -w back-config version patch",
		"nZ:dev": "npm -w nZ run dev",
		"nZ:ci": "npm -w nZ run ci",
		"nZ:run": "npm -w nZ run run_n",
		"nZ:clean": "npm -w nZ run clean",
		"nZ:version": "npm -w nZ version patch",
		"nA:dev": "npm -w nA run dev",
		"nA:ci": "npm -w nA run ci",
		"nA:run": "npm -w nA run run_n",
		"nA:clean": "npm -w nA run clean",
		"nA:version": "npm -w nA version patch",
		"dedalui:dev": "npm -w dedalui run dev",
		"dedalui:ci": "npm -w dedalui run ci",
		"dedalui:clean": "npm -w dedalui run clean",
		"dedalui:preview": "npm -w dedalui run preview",
		"dedalui:version": "npm -w dedalui version patch",
		"dedalas:dev": "npm -w dedalas run dev",
		"dedalas:ci": "npm -w dedalas run ci",
		"dedalas:clean": "npm -w dedalas run clean",
		"dedalas:preview": "npm -w dedalas run preview",
		"dedalas:version": "npm -w dedalas version patch",
		"dev": "run-p nZ:dev nA:dev dedalas:dev",
		"ci-hono": "run-s back-config:ci nZ:ci nA:ci",
		"ci-front": "run-s dedalui:ci dedalas:ci",
		"ci": "run-s ci-hono ci-front apidoc",
		"clean-root": "rimraf tmp output output2 build",
		"clean-hono": "run-s nA:clean nZ:clean back-config:clean",
		"clean-front": "run-s dedalui:clean dedalas:clean",
		"clean": "run-s clean-root clean-hono clean-front",
		"run_n": "run-p nA:run nZ:run",
		"test_nA": "scr/test_nA.sh",
		"test_nZ": "scr/test_nZ.sh",
		"test_dedalui": "scr/test_dedalui.sh",
		"open_nA_doc": "open http://localhost:3000/doc",
		"open_nA_swagger": "open http://localhost:3000/swagger",
		"open_nZ_doc": "open http://localhost:3010/doc",
		"open_nZ_swagger": "open http://localhost:3010/swagger",
		"preview": "run-p run_n dedalui:preview",
		"versions": "run-s back-config:version nA:version nZ:version dedalui:version dedalas:version",
		"gen_apidoc": "typedoc",
		"cp_apidoc": "fse copy build/apidoc pkg/dedalas/dist/docs/apidoc",
		"apidoc": "run-s gen_apidoc cp_apidoc",
		"serve_apidoc": "serve build/apidoc",
		"serve_dedalas": "serve pkg/dedalas/dist",
		"ls-workspaces": "npm -ws exec -c pwd",
		"ls-pkg": "ls -la pkg"
	},
	"devDependencies": {
		"@atao60/fse-cli": "^0.1.9",
		"npm-run-all2": "^8.0.4",
		"rimraf": "^6.0.1",
		"serve": "^14.2.4",
		"typedoc": "^0.28.6"
	}
}
