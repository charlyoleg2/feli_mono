{
	"name": "check-feli",
	"description": "an example package how to use feli",
	"version": "0.5.4",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/feli_mono.git"
	},
	"homepage": "https://charlyoleg2.github.io/feli_mono/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"web-app",
		"web-ui",
		"front-end",
		"local installation"
	],
	"type": "module",
	"files": [
		"dist/",
		"!dist/**/*.d.ts",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"bin": {
		"check-feli": "dist/check-feli-cli.js"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"tsup": {
		"entry": [
			"src/check-feli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"clean_public": "rimraf dist/public",
		"copy_ui": "shx cp -r ../myWebUI/build dist/public",
		"checkCopy": "ls -l dist/public/index.html",
		"copy_public": "run-s clean_public copy_ui checkCopy",
		"ci": "run-s check build pretty lint test:unit:once copy_public",
		"run": "node dist/check-feli.js",
		"run-help": "node dist/check-feli.js --help",
		"clean": "rimraf node_modules build dist tmp"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"shx": "^0.4.0",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"feli": "^0.5.3"
	}
}
